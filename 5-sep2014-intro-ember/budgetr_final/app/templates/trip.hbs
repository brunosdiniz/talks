
{{#if isEditing}}

  <h2>{{input value=name}}</h2>

  <label>Travel date: {{input type='date' value=date}}</label>
  <label>Cost: {{input type='number' value=cost}}</label>
  
  <button {{action 'toggleEditing'}}>Save</button>

{{else}}

  <h2>{{name}}</h2>

  <label>Travel date: {{moment-format date 'MMM D, YYYY'}}</label>
  <label>Cost: ${{cost}}</label>

  <button {{action 'toggleEditing'}}>Edit</button>

{{/if}}

<hr>

<div class="container">
  <div class="block">
    <h3 class='large'>{{monthsLeft}}</h3>
    <aside>months left</aside>
  </div>

  <div class="block">
    <aside class='top'>You need to save</aside>
    <h3>${{monthlySavingsRequired}}</h3>
    <aside>per month</aside>
  </div>
</div>